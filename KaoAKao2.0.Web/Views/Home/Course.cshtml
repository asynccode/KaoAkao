<script type="text/javascript">
    $(function () {
        seajs.use(["home/js/course.js"], function (Course) {
            Course.init();
        });

        $(".course_visual").hover(function () {
            $("#btn_prev,#btn_next").fadeIn()
        },
            function () {
                $("#btn_prev,#btn_next").fadeOut()
            });

        $dragBln = false;
        $(".course_image").touchSlider({
            flexible: true,
            speed: 500,
            btn_prev: $("#btn_prev"),
            btn_next: $("#btn_next"),
            paging: $(".flicking_con a"),
            counter: function (e) {
                $(".flicking_con a").removeClass("on").eq(e.current - 1).addClass("on");
            }
        });

        $(".course_image").bind("mousedown", function () {
            $dragBln = false;
        })

        $(".course_image").bind("dragstart", function () {
            $dragBln = true;
        })

        $(".course_image a").click(function () {
            if ($dragBln) {
                return false;
            }
        })


        timer = setInterval(function () { $("#btn_next").click(); }, 5000);
        $(".course_visual").hover(function () {
            clearInterval(timer);
        }, function () {
            timer = setInterval(function () { $("#btn_next").click(); }, 5000);
        });

        $(".course_image").bind("touchstart", function () {
            clearInterval(timer);
        }).bind("touchend", function () {
            timer = setInterval(function () { $("#btn_next").click(); }, 5000);
        });
    });
</script>