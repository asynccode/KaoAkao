@{
    ViewBag.Title = "考啊考-登录";
    Layout = null;
}

<link href="../../Content/css/common.css" rel="stylesheet" />
<link href="../../Content/css/global.css" rel="stylesheet" />
<link href="../../Content/css/layout.css" rel="stylesheet" />

<script src="../../Content/jqueryLB/jquery-1.7.2.js"></script>
<script src="../../Content/js/common.js"></script>
<script src="../../Content/js/login.js"></script>

<body>
<!--头部-->
<div class="header">
  <div class="main clearfix"><div class="l"><a href="/" class="logo">考啊考</a></div></div>
</div>
<!--头部 end-->

<!--内容-->
<div class="main toppt login-bg clearfix">
  <div class="main-cont">
    <div class="m-l-bt">
      <h1>登录</h1>
    </div>
    <form autocomplete="off">
        <div class="m-l-content">
         <dl class="m-l-c-dl">
           <dt class="dt1">邮箱/手机号</dt>
           <dd class="dd1">
             <input type="text" id="txt_userName" class="input-txt" />
             <span class="m-l-c-ico"><img src="/Content/Images/login_02.png" alt=""></span>
             <div class="hint">
               <div class="hint-tool">
                 <div class="h-t-nr">您输入的账户错误</div>
                 <span></span>
               </div>
             </div>
           </dd>
           <dt class="dt1">密码</dt>
           <dd class="dd1">
             <input type="password" id="txt_userPwd" class="input-txt" />
             <span class="m-l-c-ico"><img src="/Content/Images/login_03.png" alt=""></span>
             <div class="hint">
               <div class="hint-tool">
                 <div class="h-t-nr">您输入的密码错误</div>
                 <span></span>
               </div>
             </div>
           </dd>
         </dl>
         <div class="m-l-foot clearfix">
           <div class="m-l-f-left">
             <em class="checkbox"></em>
             <span>自动登录</span>
           </div>
           <div class="m-l-f-right">
             <a href="#">忘记密码？</a>
           </div>
         </div>
          <div style="color:red; padding-top:10px;font-size:14px;" class="hidden" id="loginError"></div>
         <input type="button" id="btn_userLogin"   class="button blue" value="登录" />
         <div class="mt20">
          <a href="/home/Register" class="button">免费注册</a>
         </div>
        @* <div class="share clearfix">
           <div class="share-left">使用其他帐号登录</div>
           <ul class="share-right clearfix">
             <li><a href="#" class="sina"  title="微博账号">微博</a></li>
             <li><a href="#" class="qq" title="QQ账号">QQ</a></li>
             <li><a href="#" class="douban" title="豆瓣账号">豆瓣</a></li>
             <li><a href="#" class="renren" title="人人账号">人人</a></li>
           </ul>
         </div>*@
        </div>
    </form>
  </div>
</div>
<!--内容 end-->

<!--底部-->
<div>@{Html.RenderPartial("_Footer");}</div>
<!--底部 end-->

</body>
